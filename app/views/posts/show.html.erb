<div class="show-view">
	<div>
		<%= link_to 'View All Announcements', posts_path, class: 'view-all-link' %>
		<h1><%= @post.title %></h1>

		<div><%= @post.body %></div>

		<%= link_to 'edit', edit_post_path(@post) %>

		<%= link_to 'delete', post_path(@post), method: :delete, data: { confirm: 'are you sure?'}, class: 'del' %>
	</div>
</div>