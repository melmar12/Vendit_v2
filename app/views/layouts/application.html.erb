<!DOCTYPE html>
<html>
<head>
  <title>Providence Treatment Center</title>
  <%= render 'favicon' %>

   <!-- bootstrap -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
   <!-- google fonts -->
        <link href='http://fonts.googleapis.com/css?family=Roboto:700,300' rel='stylesheet' type='text/css'>
    <meta charset="utf-8"/>
</head>
<body>

  <% if @alerts %>
    <% @alerts.each do |alert| %>
      <% if alert.show == true %>
        <div class="alerts">
          <p><%= alert.message %></p>
          <p id="date"><%= alert.updated_at.strftime("%a %l:%M%P %b %d, %Y") %></p>
        </div>
      <% end %>
    <% end %>
  <% end %>

<%= render 'layouts/navv' %>

<%= yield %>

<%= render 'layouts/footer' %>




  <%= javascript_include_tag 'custom-scripts' %>
</body>
</html>
