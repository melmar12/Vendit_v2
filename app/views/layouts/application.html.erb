<!DOCTYPE html>
<html>
<head>
  <title>Providence Treatment Center</title>
  <%= render 'favicon' %>

   <!-- bootstrap -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
   <!-- google fonts -->
        <link href='http://fonts.googleapis.com/css?family=Roboto:700,300' rel='stylesheet' type='text/css'>
    <meta charset="utf-8"/>
</head>
<body>
  <% flash.each do |name, msg| %>
  <ul>
  	<li> <%= msg %> </li>
  </ul>
  <% end %>

 <div class="mobile-nav-button">
        <span class="glyphicon glyphicon-align-justify" aria-hidden="true"></span>
    </div>
    <div class="navv">
      <div id="logo-box">
            <h2 class="text-logo">Providence</h2>
            <h2 class="text-logo" id="sub-text-logo">Treatment Center</h2>
        </div>
        <div id="left-nav">
            <ul>
                <li><span class="glyphicon glyphicon-earphone" aria-hidden="true"> </span>(281) 208-1117</li>
                <li><span class="glyphicon glyphicon-envelope" aria-hidden="true"> </span>info@providencetreatmentcenter.com</li>
            </ul>
        </div>
        <div class="nav-links">
          <%= link_to 'Home', root_path, method: :get %>
          <%= link_to 'About Us', root_path + "#about", method: :get %>
          <%= link_to 'Services', root_path + "#service", method: :get %>
          <%= link_to 'Announcements', parent_parentpage_path + "#anounce", method: :get %>
          <%= link_to 'Resources', parent_parentpage_path + "#resource", method: :get %>
          <a class="" href="#contact">Contact Us</a>
          <%= link_to 'Login', login_path %>
          <%= link_to 'Logout', logout_path, method: :delete %>
        </div>
    </div>

<%= yield %>

  <div id="contact" class="footer">
        <h1>CONTACT US</h1>
        <div class="contact-info">
                <ul>
                    <li><span class="glyphicon glyphicon-earphone" aria-hidden="true"></span>(281) 208-1117</li>
                    <li><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>info@providencetreatmentcenter.com</li>
                    <li><br>311 Present Street
                Missouri City<br> TX  77489</li>
                </ul>
        </div>
        <div id="map"></div>
         <div class="copyright randomxx">
            <p><!-- <%= link_to 'Manage', posts_path %> - -->Website Created by <a href="http://www.melissamartinez.me">Melissa Martinez</a> - Copyright Â© 2016 Providence Treatment Center</p>
        </div>
    </div>




  <%= javascript_include_tag 'custom-scripts' %>

   <!-- google maps -->
    <script async defer
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD6J6WFaD2V_bYZNIN6499yEtedZA5qW50&callback=initMap">
    </script>
</body>
</html>
