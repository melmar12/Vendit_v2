
<h1>Login</h1>

<%= form_for(:session, role: 'form', url: login_path) do |f| %>

<p>
	<%= f.label :username %><br/>
	<%= f.text_field :username, placeholder: 'enter username', autofocus: true %>
</p>

<p>
	<%= f.label :password %><br/>
	<%= f.password_field :password, autocomplete: 'off' %>
</p>

<p>
	<%= f.submit 'Login' %>
</p>
<% end %>
